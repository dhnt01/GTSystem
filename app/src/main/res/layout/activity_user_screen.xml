<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/AppTheme.NoActionBar"
    android:id="@+id/activity_user_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hungdo.team44phase3.UserScreen"
    android:background="#EDE3CE">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnMe"
                android:minHeight="68dp"
                android:minWidth="68dp"
                android:background="@drawable/some_button"
                android:elevation="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:onClick="onClick" />

            <Button
                android:text="Apply Filter (Search)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_search"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:text="Title"
                android:layout_width="40dp"
                android:id="@+id/textView2"
                android:layout_height="30dp"
                android:textStyle="normal|bold"
                />

            <EditText
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText" />

            <TextView
                android:text="Category"
                android:layout_width="71dp"
                android:layout_height="30dp"
                android:id="@+id/textView3"
                android:layout_marginLeft="10dp"
                android:textStyle="normal|bold" />

            <model.MultiSelectionSpinner
                android:layout_width="match_parent"
                android:id="@+id/spinnerCat"
                android:layout_height="40dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="148dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Designation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:id="@+id/spinnerDes"
                        android:layout_height="40dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="100dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="Major"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:id="@+id/spinnerMajor"
                        android:layout_height="40dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:gravity="right">

                    <TextView
                        android:text="Year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6" />

                    <Spinner
                        android:layout_width="99dp"
                        android:id="@+id/spinnerYear"
                        android:layout_height="40dp" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:id="@+id/radio_group_1">

            <RadioButton
                android:text="Project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton3"
                android:layout_weight="1" />

            <RadioButton
                android:text="Course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2"
                android:layout_weight="1" />

            <RadioButton
                android:text="Both"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton"
                android:layout_weight="1"
                android:checked="true"/>
        </RadioGroup>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:id="@+id/listview"
            android:background="@android:color/background_light" />

    </LinearLayout>

</RelativeLayout>
