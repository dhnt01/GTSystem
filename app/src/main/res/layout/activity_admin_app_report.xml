<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#EDE3CE"
    tools:context="com.example.hungdo.team44phase3.AdminAppReport">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:text="Application Report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:gravity="center" />



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:text="Total # of Applications: "
                android:layout_width="wrap_content"
                android:id="@+id/textView2"
                android:layout_height="30dp"
                android:textStyle="normal|bold"
                />

            <TextView
                android:layout_width="61dp"
                android:text="..."
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/totalApplication" />

            <TextView
                android:text="Accepted: "
                android:layout_width="71dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_width="44dp"
                android:text="..."
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/accepted" />/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="14"
                android:background="@color/colorPrimary"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="20dp">

                <TextView
                    android:text="Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="8sp"
                    android:textColor="@android:color/background_light"
                    android:textStyle="normal|bold"
                    android:gravity="left|center_vertical" />

                <TextView
                    android:text="# apply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="8sp"
                    android:textColor="@android:color/background_light"
                    android:textStyle="normal|bold"
                    android:gravity="left|center" />

                <TextView
                    android:text="% Accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="8sp"
                    android:textColor="@android:color/background_light"
                    android:textStyle="normal|bold"
                    android:gravity="right|center"/>

                <TextView
                    android:text="Top 3 Majors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:textSize="8sp"
                    android:textColor="@android:color/background_light"
                    android:textStyle="normal|bold"
                    android:gravity="right|center"/>
            </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/listReports"
                android:background="@android:color/background_light" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>


