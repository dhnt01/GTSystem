<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#EDE3CE"
    tools:context="com.example.hungdo.team44phase3.AdminAddProject">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:text="Add New Project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="normal|bold"
            android:textSize="24sp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="6">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >


                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:text="Name: "
                                android:layout_width="wrap_content"
                                android:id="@+id/textView01"
                                android:textSize="20dp"
                                android:layout_height="50dp"
                                android:textStyle="normal|bold"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:ems="10"
                                android:id="@+id/editProjectName"
                                android:background="?android:attr/actionModeBackground" />

                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:text="Advisor: "
                                android:layout_width="wrap_content"
                                android:id="@+id/textView2"
                                android:textSize="20dp"
                                android:layout_height="50dp"
                                android:textStyle="normal|bold"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:ems="10"
                                android:id="@+id/editProjectAdv"
                                android:background="?android:attr/actionModeBackground" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:text="Advisor Email: "
                                android:layout_width="wrap_content"
                                android:id="@+id/textView3"
                                android:textSize="20dp"
                                android:layout_height="50dp"
                                android:textStyle="normal|bold"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textEmailAddress"
                                android:ems="10"
                                android:id="@+id/editProjectAdvEm"
                                android:background="?android:attr/actionModeBackground" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:text="Description: "
                                android:layout_width="wrap_content"
                                android:id="@+id/textView4"
                                android:textSize="20dp"
                                android:layout_height="50dp"
                                android:textStyle="normal|bold"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:ems="10"
                                android:id="@+id/editProjectDesc"
                                android:background="?android:attr/actionModeBackground" />

                        </LinearLayout>


                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:text="Designation: "
                                android:layout_width="wrap_content"
                                android:id="@+id/textView5"
                                android:textSize="20dp"
                                android:layout_height="50dp"
                                android:textStyle="normal|bold"/>

                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/designationSpinnerProj"
                                android:layout_height="40dp"
                                android:layout_marginRight="30dp"/>

                        </LinearLayout>


                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">
                            android:weightSum="1">

                            <TextView
                                android:text="Category: "
                                android:layout_width="wrap_content"
                                android:id="@+id/textView6"
                                android:textSize="20dp"
                                android:layout_height="50dp"
                                android:textStyle="normal|bold"/>

                            <model.MultiSelectionSpinner
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/categorySpinnerProj"
                                android:layout_height="40dp"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:text="Estimated # of students: "
                                android:layout_width="wrap_content"
                                android:id="@+id/textView7"
                                android:textSize="20dp"
                                android:layout_height="50dp"
                                android:textStyle="normal|bold"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:id="@+id/editProjNumStudent"
                                android:background="?android:attr/actionModeBackground"
                                android:inputType="number"/>

                        </LinearLayout>


                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:text="Major Requirement: "
                                android:layout_width="wrap_content"
                                android:textSize="20dp"
                                android:layout_height="50dp"
                                android:textStyle="normal|bold"/>

                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/projMajorReqSpinner"
                                android:layout_height="40dp"
                                android:layout_marginRight="30dp"/>

                        </LinearLayout>


                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:text="Year Requirement: "
                                android:layout_width="wrap_content"
                                android:textSize="20dp"
                                android:layout_height="50dp"
                                android:textStyle="normal|bold"/>

                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/projYearReqSpinner"
                                android:layout_height="40dp"
                                android:layout_marginRight="30dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:text="Department Requirement: "
                                android:layout_width="wrap_content"
                                android:textSize="20dp"
                                android:layout_height="50dp"
                                android:textStyle="normal|bold"/>

                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/projDepReqSpinner"
                                android:layout_height="40dp"
                                android:layout_marginRight="30dp"/>

                        </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Submit"
                android:layout_weight="1"
                android:id="@+id/projButton"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:background="@drawable/button_background"
                android:textColorLink="@android:color/background_light"
                android:textColorHint="@android:color/holo_orange_dark" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>



